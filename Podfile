    pod 'Alamofire', '~> 4.8'
    pod 'SnapKit', '~> 4.2'
    pod 'Kingfisher', '~> 5.3'
end

target 'MarvelHeroes' do
    all_pods
end


target 'MarvelHeroesTests' do
    all_pods
    pod 'Nimble-Snapshots', '~>7.0'
    pod 'Quick', '~>2.0.0'
    pod 'Nimble', '~>8.0.1'
end
